{
    "extends": "tslint:recommended",
    "rules": {
        "indent": "tabs",
        "jsdoc-format": false,
        "whitespace": [
            false,
            "check-type"
        ],
        "only-arrow-functions": false,                  // Mixed functions allowed
        "quotemark": [true, "single", "avoid-escape"],  // Allow `'` static strings
        "no-var-requires": false,                       // Allow old-style requires
        "no-console": false,                            // Allow console output
        "trailing-comma": false,                        // No trailing comma on arrays/objects
        "no-string-literal": false,                     // Allow object['property-name']
        "interface-name": false,                        // No 'I' prefixing interface name
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"                         // Allow for old-style require of objects
        ]
    }
}
